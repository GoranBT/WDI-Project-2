
<div class="columns">
  <div class="column is-half box">
    <form method="POST" action="/spirits">

      <%# Name%>
      <div>
        <h1 class="has-text-centered is-size-3"><strong>New Spirit</strong></h1>
      </div>
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" name="name" type="text" placeholder="Name" required>
        </div>
      </div>

      <%# Type%>

      <div class="field">
        <label class="label">Type</label>
        <div class="control">
          <input class="input" name="mainSpirit" type="text" placeholder="Spirit" required>
        </div>
      </div>

      <%# Image%>

      <div class="field">
        <label class="label">Image</label>
        <div class="control">
          <input class="input" name="image" type="text" placeholder="Image" required>
        </div>
      </div>

      <%# Description%>

      <div class="field">
        <label class="label">Description (380 chars max)</label>
        <div class="control">
          <textarea class="textarea" name="description" placeholder="Description (380 chars max)" maxlength="380"></textarea>
        </div>
      </div>

      <%# Submit Button%>

      <div class="control">
        <button class="button is-info is-outlined">Submit</button>
      </div>
    </form>
  </div>
  <div class="column is-half">

    <img class="cocktail-img" src="https://img.thewhiskyexchange.com/540/brbon_saz2.jpg" alt="bartender">

  </div>
</div>
