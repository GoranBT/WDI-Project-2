<div class="hero spirit">
  <h1 class="has-text-centered is-capitalized">What is your favourite drink</h1>
</div>
<div class="section box">
  <div class="columns is-multiline">

    <% spirits.forEach(spirit => { %>

      <div class="column is-one-third-desktop is-half-tablet">

        <div class="card">
          <div class="card-image">
              <a href="/spirits/<%= spirit.id %>">
              <figure class="image is-4by3 cocktail-tile" style="background-image:url(<%= spirit.image %>)">
            </figure>
            </a>
          </div>

          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title has-text-centered is-5"><a href="/spirits/<%= spirit.id %>"><%= spirit.name %></a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
