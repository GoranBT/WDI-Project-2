
<form method="POST" action="/spirits/<%= spirit.id %>">
  <input type="hidden" name="_method" value="PUT">
<div class="column is-6 is-offset-3 box">
  <%# Name%>

  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <input class="input" name="name" type="text" placeholder="Name" value="<%= spirit.name %>">
    </div>
  </div>

  <%# Image%>

  <div class="field">
    <label class="label">Image</label>
    <div class="control">
      <input class="input" name="image" type="text" placeholder="Image" value="<%= spirit.image %>">
    </div>
  </div>

  <%# Description%>

  <div class="field">
    <label class="label">Description</label>
    <div class="control">
      <textarea class="textarea" name="description" placeholder="description"><%= spirit.description %></textarea>
    </div>
  </div>

  <%# Submit button%>

  <div class="control">
    <button class="button is-primary">Submit</button>
  </div>
</form>
</div>
