

  <div class="columns">
    <div class="column is-half">
      <form method="POST" action="/cocktails">
        <div class="field">
          <label class="label">Name</label>
          <div class="control">
            <input class="input" name="name" type="text" placeholder="Name" required>
          </div>
        </div>
        <div class="field">

          <div class="control">
            <div class="select">
              <select name="mainSpirit">
                <% spirits.forEach((spirit) => { %>
                  <option value="<%= spirit.id %>"><%= spirit.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
        </div>

    <div class="field">
      <label class="label">Image</label>
      <div class="control">
        <input class="input" name="image" type="text" placeholder="Image" required>
      </div>
    </div>
    <div class="field">
      <label class="label">Description (380 chars max)</label>
      <div class="control">
        <textarea class="textarea" name="description" placeholder="Description (380 chars max)" maxlength="380"></textarea>
      </div>
    </div>
    <div class="field">
      <label class="label">Recipe (380 chars max)</label>
      <div class="control">
        <textarea class="textarea" name="recipe" placeholder="Recipe (380 chars max)" maxlength="380"></textarea>
      </div>
    </div>
    <div class="control">
      <button class="button is-primary">Submit</button>
    </div>
  </form>
  </div>
  </div>
